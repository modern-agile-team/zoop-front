{
  "asyncapi": "2.5.0",
  "info": {
    "title": "quizzes-game-io-backend",
    "description": "The Quizzes Game IO Backend Async API",
    "version": "0.1",
    "contact": {}
  },
  "tags": [],
  "servers": {},
  "components": {
    "schemas": {
      "AccountEnteredSocketEventBodyAccount": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "nickname": {
            "type": "string"
          },
          "enteredAt": {
            "format": "date-time",
            "type": "string"
          }
        },
        "required": ["id", "nickname", "enteredAt"]
      },
      "AccountEnteredSocketEventBody": {
        "type": "object",
        "properties": {
          "account": {
            "$ref": "#/components/schemas/AccountEnteredSocketEventBodyAccount"
          },
          "currentActiveAccountsCount": {
            "type": "number"
          }
        },
        "required": ["account", "currentActiveAccountsCount"]
      },
      "AccountEnteredSocketEvent": {
        "type": "object",
        "properties": {
          "eventName": {
            "type": "string",
            "example": "account.entered"
          },
          "timestamp": {
            "format": "date-time",
            "type": "string"
          },
          "body": {
            "$ref": "#/components/schemas/AccountEnteredSocketEventBody"
          },
          "meta": {
            "type": "object"
          }
        },
        "required": ["eventName", "timestamp", "body", "meta"]
      },
      "GameRoomClosedSocketEventBody": {
        "type": "object",
        "properties": {
          "gameRoomId": {
            "type": "string"
          }
        },
        "required": ["gameRoomId"]
      },
      "GameRoomClosedSocketEvent": {
        "type": "object",
        "properties": {
          "eventName": {
            "type": "string",
            "example": "game_room.closed"
          },
          "timestamp": {
            "format": "date-time",
            "type": "string"
          },
          "body": {
            "$ref": "#/components/schemas/GameRoomClosedSocketEventBody"
          },
          "meta": {
            "type": "object"
          }
        },
        "required": ["eventName", "timestamp", "body", "meta"]
      },
      "GameRoomStatus": {
        "type": "string",
        "enum": ["waiting", "ready", "inProgress", "finished", "paused"]
      },
      "GameRoomVisibility": {
        "type": "string",
        "enum": ["public", "private", "hidden"]
      },
      "GameRoomCreatedSocketEventBody": {
        "type": "object",
        "properties": {
          "gameRoomId": {
            "type": "string"
          },
          "status": {
            "title": "GameRoomStatus",
            "allOf": [
              {
                "$ref": "#/components/schemas/GameRoomStatus"
              }
            ]
          },
          "visibility": {
            "title": "GameRoomVisibility",
            "allOf": [
              {
                "$ref": "#/components/schemas/GameRoomVisibility"
              }
            ]
          },
          "title": {
            "type": "string"
          },
          "maxPlayers": {
            "type": "number"
          },
          "currentMembersCount": {
            "type": "number"
          }
        },
        "required": [
          "gameRoomId",
          "status",
          "visibility",
          "title",
          "maxPlayers",
          "currentMembersCount"
        ]
      },
      "GameRoomCreatedSocketEvent": {
        "type": "object",
        "properties": {
          "eventName": {
            "type": "string",
            "example": "game_room.created"
          },
          "timestamp": {
            "format": "date-time",
            "type": "string"
          },
          "body": {
            "$ref": "#/components/schemas/GameRoomCreatedSocketEventBody"
          },
          "meta": {
            "type": "object"
          }
        },
        "required": ["eventName", "timestamp", "body", "meta"]
      },
      "GameRoomMemberRole": {
        "type": "string",
        "enum": ["host", "player"]
      },
      "GameRoomMemberJoinedSocketEventBody": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string"
          },
          "gameRoomId": {
            "type": "string"
          },
          "role": {
            "title": "GameRoomMemberRole",
            "allOf": [
              {
                "$ref": "#/components/schemas/GameRoomMemberRole"
              }
            ]
          },
          "nickname": {
            "type": "string"
          },
          "currentMembersCount": {
            "type": "number"
          }
        },
        "required": [
          "accountId",
          "gameRoomId",
          "role",
          "nickname",
          "currentMembersCount"
        ]
      },
      "GameRoomMemberJoinedSocketEvent": {
        "type": "object",
        "properties": {
          "eventName": {
            "type": "string",
            "example": "game_room.member_joined"
          },
          "timestamp": {
            "format": "date-time",
            "type": "string"
          },
          "body": {
            "$ref": "#/components/schemas/GameRoomMemberJoinedSocketEventBody"
          },
          "meta": {
            "type": "object"
          }
        },
        "required": ["eventName", "timestamp", "body", "meta"]
      },
      "GameRoomMemberLeftSocketEventBody": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string"
          },
          "gameRoomId": {
            "type": "string"
          },
          "role": {
            "title": "GameRoomMemberRole",
            "allOf": [
              {
                "$ref": "#/components/schemas/GameRoomMemberRole"
              }
            ]
          },
          "nickname": {
            "type": "string"
          },
          "currentMembersCount": {
            "type": "number"
          }
        },
        "required": [
          "accountId",
          "gameRoomId",
          "role",
          "nickname",
          "currentMembersCount"
        ]
      },
      "GameRoomMemberLeftSocketEvent": {
        "type": "object",
        "properties": {
          "eventName": {
            "type": "string",
            "example": "game_room.member_left"
          },
          "timestamp": {
            "format": "date-time",
            "type": "string"
          },
          "body": {
            "$ref": "#/components/schemas/GameRoomMemberLeftSocketEventBody"
          },
          "meta": {
            "type": "object"
          }
        },
        "required": ["eventName", "timestamp", "body", "meta"]
      },
      "GameRoomMemberRoleChangedSocketEventBody": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string"
          },
          "gameRoomId": {
            "type": "string"
          },
          "role": {
            "title": "GameRoomMemberRole",
            "allOf": [
              {
                "$ref": "#/components/schemas/GameRoomMemberRole"
              }
            ]
          },
          "nickname": {
            "type": "string"
          }
        },
        "required": ["accountId", "gameRoomId", "role", "nickname"]
      },
      "GameRoomMemberRoleChangedSocketEvent": {
        "type": "object",
        "properties": {
          "eventName": {
            "type": "string",
            "example": "game_room.member_role_changed"
          },
          "timestamp": {
            "format": "date-time",
            "type": "string"
          },
          "body": {
            "$ref": "#/components/schemas/GameRoomMemberRoleChangedSocketEventBody"
          },
          "meta": {
            "type": "object"
          }
        },
        "required": ["eventName", "timestamp", "body", "meta"]
      }
    }
  },
  "defaultContentType": "application/json",
  "channels": {
    "account.entered": {
      "publish": {
        "description": "유저가 접속했을 때 발생하는 이벤트",
        "message": {
          "payload": {
            "$ref": "#/components/schemas/AccountEnteredSocketEvent"
          },
          "name": "AppGateway#handleConnection"
        }
      }
    },
    "game_room.closed": {
      "publish": {
        "tags": [
          {
            "name": "game_room"
          }
        ],
        "description": "게임방이 폐쇄됨",
        "message": {
          "payload": {
            "$ref": "#/components/schemas/GameRoomClosedSocketEvent"
          },
          "name": "GameRoomClosedHandler#publish"
        }
      }
    },
    "game_room.created": {
      "publish": {
        "tags": [
          {
            "name": "game_room"
          }
        ],
        "description": "게임방이 생성됨",
        "message": {
          "payload": {
            "$ref": "#/components/schemas/GameRoomCreatedSocketEvent"
          },
          "name": "GameRoomCreatedHandler#publish"
        }
      }
    },
    "game_room.member_joined": {
      "publish": {
        "tags": [
          {
            "name": "game_room"
          }
        ],
        "description": "유저가 게임방에 접속",
        "message": {
          "payload": {
            "$ref": "#/components/schemas/GameRoomMemberJoinedSocketEvent"
          },
          "name": "GameRoomMemberJoinedHandler#handle"
        }
      }
    },
    "game_room.member_left": {
      "publish": {
        "tags": [
          {
            "name": "game_room"
          }
        ],
        "description": "유저가 게임방에 퇴장",
        "message": {
          "payload": {
            "$ref": "#/components/schemas/GameRoomMemberLeftSocketEvent"
          },
          "name": "GameRoomMemberLeftHandler#publish"
        }
      }
    },
    "game_room.member_role_changed": {
      "publish": {
        "tags": [
          {
            "name": "game_room"
          }
        ],
        "description": "유저의 게임방 역할이 변경",
        "message": {
          "payload": {
            "$ref": "#/components/schemas/GameRoomMemberRoleChangedSocketEvent"
          },
          "name": "GameRoomMemberRoleChangedHandler#publish"
        }
      }
    }
  }
}
